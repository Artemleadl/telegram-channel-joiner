{
  "version": 2,
  "builds": [
    {
      "src": "src/bot.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/bot.py"
    }
  ],
  "env": {
    "PYTHONPATH": "src"
  },
  "functions": {
    "src/bot.py": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
} 